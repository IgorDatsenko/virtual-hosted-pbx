include _modules/news
include _modules/videos
include _modules/albums
include _modules/photos
include _modules/shows
include _modules/store
include _modules/popup
include _modules/footer
block body
  -var main = true
  //wrapper starts
  .wrapper.main-page
    //header starts
    +header
